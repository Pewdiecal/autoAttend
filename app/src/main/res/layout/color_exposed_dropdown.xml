<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/colorSpinnerTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/colorImg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.87"
        android:textSize="18sp"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/colorImg"
        android:layout_width="50dp"
        android:layout_height="29dp"
        android:contentDescription="@string/addSub_colorIcon"
        app:layout_constraintBottom_toBottomOf="@+id/colorSpinnerTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/colorSpinnerTxt"
        app:layout_constraintTop_toTopOf="@+id/colorSpinnerTxt"
        app:srcCompat="@drawable/ic_amber" />
</androidx.constraintlayout.widget.ConstraintLayout>